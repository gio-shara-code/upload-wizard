{
  "private": true,
  "scripts": {
    "build": "turbo run build --filter=@adapters/* --filter=@providers/* --filter=@server/* --filter=shared-types",
    "dev": "turbo run dev --filter=nextjs-example",
    "test": "turbo run test",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,md}\"",
    "image-uploader": "pnpm --filter image-uploader start",
    "publish-packages": "turbo run build lint test && changeset version && changeset publish",
    "changeset": "changeset"
  },
  "name": "upload-wizard",
  "repository": "https://github.com/gio-shara-code/upload-wizard",
  "devDependencies": {
    "@changesets/cli": "^2.26.2",
    "@commitlint/cli": "^17.6.6",
    "@commitlint/config-conventional": "^17.6.6",
    "@swc/core": "^1.3.67",
    "@swc/jest": "^0.2.26",
    "@tsconfig/node18": "^18.2.0",
    "@types/jest": "^29.5.2",
    "@types/node": "^18.16.19",
    "concurrently": "^8.2.0",
    "dotenv": "^16.3.1",
    "eslint": "^8.44.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-config-standard-with-typescript": "^37.0.0",
    "eslint-plugin-react": "^7.33.0",
    "husky": "^8.0.3",
    "jest": "^29.5.0",
    "nodemon": "^2.0.22",
    "prettier": "^2.8.8",
    "tsup": "^7.1.0",
    "turbo": "1.10.7",
    "typescript": "^5.1.6"
  },
  "dependencies": {
    "znv": "^0.3.2",
    "zod": "^3.21.4"
  },
  "engines": {
    "node": "^16.13.0 || ^18.12.0"
  },
  "packageManager": "pnpm@8.6.1"
}
